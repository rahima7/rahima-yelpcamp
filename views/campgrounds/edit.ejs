<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">
            Edit campground
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="validate-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Title </label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%=campground.title %>" required>
                    <div class="valid-feedback">
                        Looks good! </div>
                    <div class="invalid-feedback">
                        Please enter new campground name</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%= campground.location%>" required>
                    <div class="valid-feedback">
                        Looks good! </div>
                    <div class="invalid-feedback">
                        Please enter valid location</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Image URL</label>
                    <input class="form-control" type="text" id="image" name="campground[image]"
                        value="<%= campground.image%>" required>
                    <div class="valid-feedback">
                        Looks good! </div>
                    <div class="invalid-feedback">
                        Please enter new image</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campground.price%>"
                            required>
                        <div class="valid-feedback">
                            Looks good! </div>
                        <div class="invalid-feedback">
                            Please enter price</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        required> <%= campground.description%></textarea>
                    <div class="valid-feedback">
                        Looks good! </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info"> Update Campground </button>
                </div>
            </form>
            <div class="mb-3">
                <footer>
                    <a class="btn btn-outline-secondary" href="/campgrounds" role="button">Back to All
                        Campgrounds</a>
                </footer>
            </div>
        </div>
    </div>

    <script>
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.validate-form')
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>